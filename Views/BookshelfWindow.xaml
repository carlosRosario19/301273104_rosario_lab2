<Window x:Class="_301273104_rosario_lab2.Views.BookshelfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_301273104_rosario_lab2.Views"
        xmlns:viewModel="clr-namespace:_301273104_rosario_lab2.ViewModels"
        mc:Ignorable="d"
        Title="eBook Reader" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Body -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="LightBlue" Height="40">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Hello"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Margin="10,0"/>

                <Button Content="{Binding Username}"
                        VerticalAlignment="Center"
                        Margin="10,0"
                        >
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Logout"
                                      Command="{Binding LogoutCommand}"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Body -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
            <ListBox x:Name="BooksListBox"
             ItemsSource="{Binding Books}"
             SelectedItem="{Binding SelectedBook, Mode=TwoWay}"
             SelectionMode="Single"
             MouseDoubleClick="BooksListBox_MouseDoubleClick"
             Background="Transparent"
             BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightBlue" BorderThickness="1" 
                        Background="White" CornerRadius="4" 
                        Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                <ItemsControl ItemsSource="{Binding Authors}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="12" Margin="0,0,6,0"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

    </Grid>
</Window>
