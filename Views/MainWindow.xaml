<Window x:Class="_301273104_rosario_lab2.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_301273104_rosario_lab2"
        xmlns:viewModel="clr-namespace:_301273104_rosario_lab2.ViewModels"
        xmlns:helpers="clr-namespace:_301273104_rosario_lab2.Helpers"
        mc:Ignorable="d"
        Title="eBook Reader" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Body -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
            <Image Source="/Views/Images/header.png" Width="100" Height="100" Stretch="Uniform"/>
            <TextBlock Text="Lab# 2 - Amazon DynamoDB Service"
                       FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Main Body (3x3 Grid for form) -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
              Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Username -->
            <Label Grid.Row="0" 
                   Grid.Column="0" 
                   Content="Username:" 
                   VerticalAlignment="Center" 
                   Margin="5"/>

            <TextBox Grid.Row="0" 
                     Grid.Column="1" 
                     Margin="5"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Password -->
            <Label Grid.Row="1" 
                   Grid.Column="0" 
                   Content="Password:" 
                   VerticalAlignment="Center" 
                   Margin="5"/>

            <PasswordBox Grid.Row="1" 
                         Grid.Column="1" 
                         Margin="5"
                         helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Login Button -->
            <Button Grid.Row="2" 
                    Grid.Column="1" 
                    Content="Login" 
                    Padding="10,5" 
                    Margin="5" 
                    Background="LightBlue"
                    Command="{Binding LoginCommand}"/>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="LightBlue" Height="20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <TextBlock Text="Carlos Rosario" 
                           FontSize="12"
                           VerticalAlignment="Center" 
                           Margin="5,0"/>

                <Image Source="/Views/Images/footer.png" 
                       Height="16"
                       Stretch="Uniform" 
                       Margin="5,0"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
